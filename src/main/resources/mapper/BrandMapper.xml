<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tedu.csmall.product.mapper.BrandMapper">
    <!--int insert(Brand brand);;-->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into mall_pms.pms_brand
        values (null, #{name}, #{pinyin}, #{logo}, #{description}, #{keywords},
                #{sort}, #{sales}, #{productCount}, #{commentCount},
                #{positiveCommentCount}, #{enable}, #{gmtCreate}, #{gmtModified})
    </insert>
    <!--int insertBatch(List<Brand> brands);-->
    <insert id="insertBatch" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO mall_pms.pms_brand
        VALUES
        <foreach collection="list" item="i" separator=",">
            (null,#{i.name},#{i.pinyin},#{i.logo},#{i.description},#{i.keywords},
            #{i.sort},#{i.sales}, #{i.productCount},#{i.commentCount},
            #{i.positiveCommentCount},#{i.enable},#{i.gmtCreate}, #{i.gmtModified})
        </foreach>
    </insert>
    <!--int deleteById(Long id);-->
    <delete id="deleteById">
        DELETE
        FROM mall_pms.pms_brand
        WHERE mall_pms.pms_brand.id = #{id}
    </delete>
    <!--int deleteByIds(Long[] id);-->
    <delete id="deleteByIds">
        DELETE FROM mall_pms.pms_brand
        WHERE id in(
        <foreach collection="array" item="id" separator=",">
            #{id}
        </foreach>
        )
    </delete>
    <!--int update(Long id);-->
    <update id="update">
        UPDATE mall_pms.pms_brand
        <set>
            <if test="name!=null">pms_brand.name=#{name}</if>
            <if test="pinyin!=null">#{pinyin}</if>
            <if test="logo!=null">#{logo}</if>
            <if test="description!=null">#{description}</if>
            <if test="keywords!=null">#{keywords}</if>
            <if test="sort!=null">#{sort}</if>
            <if test="sales!=null">#{sales}</if>
            <if test="productCount!=null">#{productCount}</if>
            <if test="commentCount!=null">#{commentCount}</if>
            <if test="positiveCommentCount!=null">#{positiveCommentCount}</if>
            <if test="enable!=null">#{enable}</if>
            <if test="gmtCreate!=null">#{gmtCreate}</if>
            <if test="gmtModified!=null">#{gmtModified}</if>
        </set>
        WHERE id=#{id}
    </update>
    <!--int count();-->
    <select id="count" resultType="int">
        SELECT COUNT(*) FROM mall_pms.pms_brand
    </select>
    <!--BrandStanderVO selectById(Long id);-->
    <select id="selectById" resultType="cn.tedu.csmall.product.pojo.vo.BrandStanderVO">
        SELECT  id, name, pinyin, logo, description
        FROM mall_pms.pms_brand
        WHERE id=#{id}
    </select>
    <!--List<BrandListVO> list();-->
    <select id="list" resultType="cn.tedu.csmall.product.pojo.vo.BrandListVO">
        SELECT  id, name, pinyin, logo, description
        FROM mall_pms.pms_brand
        ORDER BY sort DESC ,id DESC
    </select>
</mapper>
